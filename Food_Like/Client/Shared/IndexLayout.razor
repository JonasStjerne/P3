@inherits LayoutComponentBase

    <style>
        body {
            background-color: var(--MainBg);
        }

        .mainx {
            background-color: var(--secondaryBg);
            background-image: url('/assets/bgIcons.png');
            background-repeat: repeat-x;
            position: absolute;
            z-index: 0;
            width:100%;
            height: 100%;
        }

        .box {
            background-color: var(--MainBg);
            position: absolute;
            clip-path: polygon(0 49%, 100% 40%, 100% 100%, 0% 100%);
            width: 100%;
            height: 100%;
            z-index: -1;
        }

    </style>
    <div class="main mainx" style="">
        <div class="box"></div>
        <div class="content">
            <h1 class="mb-5 text-center">Food Like</h1>
            @Body
        </div>
    </div>

